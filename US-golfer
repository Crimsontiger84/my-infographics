    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const wrapLabel = (label, maxLength = 16) => {
                if (typeof label !== 'string' || label.length <= maxLength) {
                    return label;
                }
                const words = label.split(' ');
                const lines = [];
                let currentLine = '';
                for (const word of words) {
                    if ((currentLine + word).length > maxLength) {
                        lines.push(currentLine.trim());
                        currentLine = '';
                    }
                    currentLine += word + ' ';
                }
                lines.push(currentLine.trim());
                return lines.filter(line => line.length > 0);
            };

            const tooltipTitleCallback = (tooltipItems) => {
                const item = tooltipItems[0];
                let label = item.chart.data.labels[item.dataIndex];
                if (Array.isArray(label)) {
                    return label.join(' ');
                }
                return label;
            };

            const sharedChartOptions = {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        labels: {
                            color: '#cbd5e1',
                            font: {
                                size: 14
                            }
                        }
                    },
                    tooltip: {
                        callbacks: {
                            title: tooltipTitleCallback
                        }
                    }
                },
                scales: {
                    y: {
                        ticks: { color: '#94a3b8' },
                        grid: { color: '#334155' }
                    },
                    x: {
                        ticks: { color: '#94a3b8' },
                        grid: { color: '#334155' }
                    }
                }
            };

            const onOffCourseCtx = document.getElementById('onOffCourseChart').getContext('2d');
            new Chart(onOffCourseCtx, {
                type: 'doughnut',
                data: {
                    labels: [wrapLabel('온코스 참여자 (2,800만)'), wrapLabel('오프코스 참여자 (2,790만)')],
                    datasets: [{
                        label: '참여자 수',
                        data: [2800, 2790],
                        backgroundColor: ['#3357FF', '#FF33A1'],
                        borderColor: '#1e293b',
                        borderWidth: 4
                    }]
                },
                options: {
                    ...sharedChartOptions,
                    scales: { y: { display: false }, x: { display: false } }
                }
            });

            const demographicsCtx = document.getElementById('demographicsChart').getContext('2d');
            new Chart(demographicsCtx, {
                type: 'doughnut',
                data: {
                    labels: [wrapLabel('젊은층/여성 (62%)'), wrapLabel('기타 (38%)')],
                    datasets: [{
                        label: '인구 구성',
                        data: [62, 38],
                        backgroundColor: ['#33FF57', '#A133FF'],
                        borderColor: '#1e293b',
                        borderWidth: 4
                    }]
                },
                options: {
                    ...sharedChartOptions,
                    scales: { y: { display: false }, x: { display: false } }
                }
            });

            const marketGrowthCtx = document.getElementById('marketGrowthChart').getContext('2d');
            new Chart(marketGrowthCtx, {
                type: 'line',
                data: {
                    labels: ['2024', '2025', '2027', '2030', '2033'],
                    datasets: [{
                        label: '시장 규모 (억 달러)',
                        data: [17.4, 19.2, 25.1, 36.5, 52.0],
                        fill: true,
                        backgroundColor: 'rgba(51, 255, 87, 0.2)',
                        borderColor: '#33FF57',
                        tension: 0.4,
                        pointBackgroundColor: '#33FF57',
                        pointRadius: 5
                    }]
                },
                options: {
                    ...sharedChartOptions,
                    scales: {
                        y: {
                            ...sharedChartOptions.scales.y,
                            beginAtZero: true,
                            title: { display: true, text: '시장 규모 (억 달러)', color: '#cbd5e1' }
                        },
                        x: {
                            ...sharedChartOptions.scales.x,
                            title: { display: true, text: '연도', color: '#cbd5e1' }
                        }
                    }
                }
            });
        });
    </script>
